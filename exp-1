#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    pid_t pid;

    pid = fork(); // Create a new process

    if (pid < 0) {
        // Fork failed
        printf("Process creation failed.\n");
    } 
    else if (pid == 0) {
        // Child process
        printf("This is the Child Process. PID = %d\n", getpid());
    } 
    else {
        // Parent process
        printf("This is the Parent Process. PID = %d, Child PID = %d\n", getpid(), pid);
    }

    return 0;
}

#include <stdio.h>
#include <pthread.h>

void* printMessage(void* arg)
{
    char* msg = (char*)arg;
    printf("%s\n", msg);
    return NULL;
}

int main()
{
    pthread_t t1, t2;

    pthread_create(&t1, NULL, printMessage, "Thread 1 is running");
    pthread_create(&t2, NULL, printMessage, "Thread 2 is running");

    pthread_join(t1, NULL);
    pthread_join(t2, NULL);

    return 0;
}

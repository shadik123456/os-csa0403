#include <stdio.h>

int findOptimal(int pages[], int frames[], int n, int index, int f)
{
    int pos = -1, farthest = index;

    for (int i = 0; i < f; i++) {
        int j;
        for (j = index; j < n; j++) {
            if (frames[i] == pages[j]) {
                if (j > farthest) {
                    farthest = j;
                    pos = i;
                }
                break;
            }
        }
        if (j == n)
            return i;   // Page not used again
    }
    return (pos == -1) ? 0 : pos;
}

int main()
{
    int pages[20], frames[10];
    int n, f, faults = 0;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &f);

    for (int i = 0; i < f; i++)
        frames[i] = -1;

    for (int i = 0; i < n; i++) {
        int found = 0;
        for (int j = 0; j < f; j++) {
            if (frames[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        if (!found) {
            int pos = findOptimal(pages, frames, n, i + 1, f);
            frames[pos] = pages[i];
            faults++;
        }
    }

    printf("Total Page Faults = %d\n", faults);
    return 0;
}

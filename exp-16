#include <stdio.h>

int main() {
    int n, m, i, j;
    printf("Enter number of memory blocks: ");
    scanf("%d", &m);
    int block[m], blockSize[m], allocation[m];
    for(i = 0; i < m; i++) {
        printf("Size of block %d: ", i+1);
        scanf("%d", &blockSize[i]);
        allocation[i] = -1;  // -1 means free
    }

    printf("Enter number of processes: ");
    scanf("%d", &n);
    int process[n], processSize[n];
    for(i = 0; i < n; i++) {
        printf("Size of process %d: ", i+1);
        scanf("%d", &processSize[i]);
    }

    // First-Fit Allocation
    for(i = 0; i < n; i++) {
        for(j = 0; j < m; j++) {
            if(blockSize[j] >= processSize[i] && allocation[j] == -1) {
                allocation[j] = i;  // allocate process i to block j
                break;
            }
        }
    }

    printf("\nBlock No.\tBlock Size\tProcess No.\tProcess Size\n");
    for(i = 0; i < m; i++) {
        printf("%d\t\t%d\t\t", i+1, blockSize[i]);
        if(allocation[i] != -1)
            printf("%d\t\t%d\n", allocation[i]+1, processSize[allocation[i]]);
        else
            printf("Not Allocated\t-\n");
    }

    return 0;
}

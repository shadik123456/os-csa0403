#include <stdio.h>
#include <string.h>

#define MAX 100
#define NAME_LENGTH 20

int main() {
    char directory[MAX][NAME_LENGTH];
    int n = 0; // number of files
    int choice;
    char filename[NAME_LENGTH];

    while(1) {
        printf("\nSingle Level Directory Operations:\n");
        printf("1. Create File\n");
        printf("2. Delete File\n");
        printf("3. Display Files\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1: // Create File
                printf("Enter file name to create: ");
                scanf("%s", filename);
                // Check if file already exists
                int exists = 0;
                for(int i = 0; i < n; i++) {
                    if(strcmp(directory[i], filename) == 0) {
                        exists = 1;
                        break;
                    }
                }
                if(exists)
                    printf("File already exists!\n");
                else {
                    strcpy(directory[n], filename);
                    n++;
                    printf("File created successfully.\n");
                }
                break;

            case 2: // Delete File
                printf("Enter file name to delete: ");
                scanf("%s", filename);
                int found = 0;
                for(int i = 0; i < n; i++) {
                    if(strcmp(directory[i], filename) == 0) {
                        found = 1;
                        // Shift remaining files
                        for(int j = i; j < n-1; j++)
                            strcpy(directory[j], directory[j+1]);
                        n--;
                        printf("File deleted successfully.\n");
                        break;
                    }
                }
                if(!found)
                    printf("File not found!\n");
                break;

            case 3: // Display Files
                if(n == 0)
                    printf("No files in directory.\n");
                else {
                    printf("Files in directory:\n");
                    for(int i = 0; i < n; i++)
                        printf("%s\n", directory[i]);
                }
                break;

            case 4: // Exit
                printf("Exiting...\n");
                return 0;

            default:
                printf("Invalid choice! Try again.\n");
        }
    }

    return 0;
}
